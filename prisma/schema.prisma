
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  address Address?
  password String
  announcement Announcement[]
  @@map("users")
}
model Announcement {
  id Int        @id @default(autoincrement())
  advertiser User @relation(fields: [advertiserId], references: [id])
  advertiserId Int
  vehicle String
  licensePlate String 
  price Float
  socialLink String
  date DateTime
  @@map("announcements")
}

model Address {
  id Int        @id
  district String
  street String
  city String
  state String
  user User @relation(fields: [id], references: [id])
  @@map("addresses")
}