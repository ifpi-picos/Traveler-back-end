generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String
  password     String
  image        String?
  active       Boolean        @default(true)
  address      Address?
  announcement Announcement[]

  @@map("users")
}

model Announcement {
  id                  Int      @id @default(autoincrement())
  advertiserId        Int
  vehicle             String
  licensePlate        String
  price               Float
  socialLink          String
  date                DateTime @db.Date
  image               String
  endCity             String
  endDistrict         String
  endState            String
  endStreet           String
  endReferencePoint   String?
  endZipCode          String
  startCity           String
  startDistrict       String
  startState          String
  startStreet         String
  startReferencePoint String?
  startZipCode        String
  advertiser          User     @relation(fields: [advertiserId], references: [id])

  @@map("announcements")
}

model Address {
  id       Int    @id @unique
  district String
  street   String
  city     String
  state    String
  user     User   @relation(fields: [id], references: [id])

  @@map("addresses")
}
